<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.hse.javaprogramming.client.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Клавогонки" style="-fx-font-size: 24px;"/>

    <VBox spacing="5">
        <Label text="Адрес сервера"/>
        <TextField fx:id="ipAddressInput" text="localhost" promptText="localhost"/>

        <Label text="Порт"/>
        <TextField fx:id="portInput" text="5619" promptText="5619"/>

        <Label text="Ваше имя"/>
        <TextField fx:id="nameInput" text="Белый медведь" promptText="Белый медведь"/>
    </VBox>

    <Button text="Играть" onAction="#playButtonClicked"/>
    <Button text="Об игре" onAction="#aboutButtonClicked"/>

</VBox>
